{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "allowJs": false,
        "baseUrl": "."
    },
    "include": [
        "cache/**/*",
        "core/**/*",
        "db/**/*",
        "helpers/**/*",
        "http/**/*",
        "i18n/**/*",
        "ioc/**/*",
        "log/**/*",
        "midwares/**/*",
        "model/**/*",
        "rest/**/*",
        "session/**/*",
        "utils/**/*",
        "web/**/*",
        "index.ts"
    ]
}
